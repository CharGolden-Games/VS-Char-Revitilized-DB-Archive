<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->

	<app title="Friday Night Funkin': VS Char Revitalized" file="Char" packageName="com.chargcheese.vschar.revitalizedalpha1" package="com.chargcheese.vschar.revitalizedalpha1" main="Main" version="Funkin 0.2.8 | Psych 0.7.1h" company="CharGCheese" />

	<!--Switch Export with Unique ApplicationID and Icon-->
	<set name="APP_ID" value="0x0100f6c013bbc000" />

	<!-- NOTE TO SELF: DISABLE THIS IF ISSUES ARE FOUND -->
	<haxedef name="LINC_LUA_RELATIVE_DYNAMIC_LIB"/> <!-- stable luas PUT AFTER FIRST LINE WITH APP NAME AND ETC -->

	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
		or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"-->
	<app preloader="Preloader" resizable="true" />
	<app preloader="flixel.system.FlxPreloader" />

	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2-->
	<set name="SWF_VERSION" value="11.8" />

	<!-- ______________________ PSYCH ENGINE CUSTOMIZATION ______________________ -->

	<define name="IS_LINUX" if="linux" />
	<define name="MODS_ALLOWED" if="desktop" />
	<define name="HSCRIPT_ALLOWED" if="desktop" />
	<define name="LUA_ALLOWED" if="desktop" />
	<define name="ACHIEVEMENTS_ALLOWED" />
	<define name="VIDEOS_ALLOWED" if="windows || android" unless="32bits"/> <!-- vlc is being a fucking pest for me so as of rn linux does NOT support videos! if you wish to try and re-enable it simply change if="windows || android" to if="windows || linux || android"-->
	<define name="PSYCH_WATERMARKS"/> <!-- DELETE THIS TO REMOVE WATERMARKS/DEV NAMES ON TITLE SCREEN -->
	<define name="TITLE_SCREEN_EASTER_EGG"/> <!-- DELETE THE if="officialBuild" for enabling this on an unofficial build -->
	<define name="IS_VS_CHAR"/> <!-- for disabling the engine update checker -->
	<define name="IS_CHAR_ENGINE"/> <!-- for disabling vs char update checker -->
	<!-- <define name="SHOW_DONATE_OPTION"/> --> <!-- dunno why you'd wanna, but this is easier than modifying code -->
	<!-- <define name="SHOW_BASE_CAT"/> --> <!-- for enabling showing of base catagory, pretty useless if you don't plan on showing base game songs -->
	<define name="IS_DEBUG" if="debug" />
	<define name="SHOW_GITCOMMIT"/>

	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="980" fps="" background="#000000" hardware="true" vsync="false" />

	<!--HTML5-specific-->
	<window if="html5" resizable="true" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" resizable="false"/>

	<!--Switch-specific-->
	<window if="switch" orientation="landscape" fullscreen="true" width="0" height="0" resizable="true" />

	<!-- _____________________________ Path Settings ____________________________ -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bits" />

	<classpath name="source" />

	<!-- __________________________ Game Assets & Etc. __________________________ -->

	<!-- Turn on Crash Handler -->
	<define name="CRASH_HANDLER" if="desktop release" />

	<!-- Preload Assets -->
	<define name="PRELOAD_ALL" unless="web" />
	<define name="NO_PRELOAD_ALL" unless="PRELOAD_ALL"/>

	<assets path="assets/fonts" exclude="*.md || *.txt || *.bak"/>
	<assets path="assets/preload" rename="assets" exclude="*.ogg || *.md" if="web"/>
	<assets path="assets/preload" rename="assets" exclude="*.mp3 || *.md"  unless="web"/>
	<assets path="assets/fallbacks/images" library="image_backups" rename="assets/images/backups" />

	<define name="CHECK_FOR_UPDATES"/> <!-- add if="isOfficialBuild" if you don't want your version to check for updates-->

	<!-- Week Assets -->
	<library name="videos"        preload="true" />
	<section if="PRELOAD_ALL">
		<library name="songs"         preload="true" />
		<library name="shared"        preload="true" />
		<library name="week_assets"   preload="true" />
		<library name="image_backups" preload="true" />
	</section>

	<section if="NO_PRELOAD_ALL">
		<library name="songs"         preload="false" />
		<library name="shared"        preload="false" />
		<library name="week_assets"   preload="false" />
		<library name="image_backups" preload="false" />
	</section>

	<assets path="assets/videos"        library="videos"        exclude="*.md" if="VIDEOS_ALLOWED"/>
	<assets path="assets/songs"         library="songs"         exclude="*.ogg || *.md" if="web"/>
	<assets path="assets/songs"         library="songs"         exclude="*.mp3 || *.md" unless="web"/>
	<assets path="assets/shared"        library="shared"        exclude="*.ogg || *.md" if="web"/>
	<assets path="assets/shared"        library="shared"        exclude="*.mp3 || *.md" unless="web"/>
	<assets path="assets/week_assets"   library="week_assets"   rename="assets" exclude="*.ogg || *.md" if="web"/>
	<assets path="assets/week_assets"   library="week_assets"   rename="assets" exclude="*.mp3 || *.md" unless="web"/>

	<section if="MODS_ALLOWED">
		<assets path='example_mods' rename='mods' embed='false'/>
	</section>
	<assets path='art/readme.txt' rename='readme.txt' />
	<assets path='changelogs/changelog.md' rename='changelog.md' />
	<assets path='changelogs/chartChangelog.md' rename='chartChangelog.md' />
	<assets path="assets/extra" rename="assets" />

	<!-- _______________________________ Libraries ______________________________ -->

	<!-- Flixel Shit -->
	<haxelib name="flixel" />
	<haxelib name="flixel-ui" />
	<haxelib name="flixel-addons" />

	<!-- for cursor changer shit lmao -->
	<haxelib name="haxeui-core" />
	<haxelib name="haxeui-flixel" />

	<!--Psych stuff needed-->
	<haxelib name="linc_luajit" if="LUA_ALLOWED"/>
	<haxelib name="SScript" if="HSCRIPT_ALLOWED"/>
	<haxelib name="hxCodec" if="VIDEOS_ALLOWED"/>
	<haxelib name="discord_rpc" if="desktop"/>
	<haxelib name="tjson" />
	<haxedef name="openflPos" />
	<haxedef name="hscriptPos" />

	<!-- Enables a terminal log prompt on debug builds -->
	<haxelib name="hxcpp-debug-server" if="debug"/>
	<haxedef name="HXC_LIBVLC_LOGGING" if="VIDEOS_ALLOWED debug" />

	<!-- ______________________________ Haxedefines _____________________________ -->

	<!--Enable the Flixel core recording system-->
	<!--<haxedef name="FLX_RECORD" />-->

	<!--Disable the right and middle mouse buttons-->
	<!-- <haxedef name="FLX_NO_MOUSE_ADVANCED" /> -->

	<!--Disable the native cursor API on Flash-->
	<!--<haxedef name="FLX_NO_NATIVE_CURSOR" />-->

	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<!-- <haxedef name="FLX_NO_MOUSE" if="mobile" /> -->
	<!-- <haxedef name="FLX_NO_KEYBOARD" if="mobile" /> -->
	<!-- <haxedef name="FLX_NO_TOUCH" if="desktop" /> -->
	<!--<haxedef name="FLX_NO_GAMEPAD" />-->

	<!--Disable the Flixel core sound tray-->
	<!--<haxedef name="FLX_NO_SOUND_TRAY" />-->

	<!--Disable the Flixel sound management code-->
	<!--<haxedef name="FLX_NO_SOUND_SYSTEM" />-->

	<!--Disable the Flixel core focus lost screen-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />

	<!-- Show debug traces for hxCodec -->
	<haxedef name="HXC_DEBUG_TRACE" if="debug" />

	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug"/> <!-- annoying, re-enable with unless="debug" -->

	<!--Enable this for Nape release builds for a serious peformance improvement-->
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<!--Used for Izzy Engine's crash handler-->
	<haxedef name="HXCPP_CHECK_POINTER" if="CRASH_HANDLER" />
	<haxedef name="HXCPP_STACK_LINE" if="CRASH_HANDLER" />
	<haxedef name="HXCPP_STACK_TRACE" if="CRASH_HANDLER" />
	<haxedef name='no-deprecation-warnings' />

	<!--Macro fixes-->
	<haxeflag name="--macro" value="allowPackage('flash')" />
	<haxeflag name="--macro" value="include('my.pack')" />

	<!-- _________________________________ Custom _______________________________ -->

	<!--Place custom nodes like icons here (higher priority to override the HaxeFlixel icon)-->

	<icon path="art/icon/icon16-Debug.png" size='16' if="debug"/>
	<icon path="art/icon/icon32-Debug.png" size='32' if="debug"/>
	<icon path="art/icon/icon64-Debug.png" size='64' if="debug"/>
	<icon path="art/icon/icon128-Debug.png" size='128' if="debug"/>
	<icon path="art/icon/iconOG-Debug.png" if="debug"/>
	<icon path="art/icon/icon16-32.png" size='16' unless="debug" if="32bits"/>
	<icon path="art/icon/icon32-32.png" size='32' unless="debug" if="32bits"/>
	<icon path="art/icon/icon64-32.png" size='64' unless="debug" if="32bits"/>
	<icon path="art/icon/icon128-32.png" size='128' unless="debug" if="32bits"/>
	<icon path="art/icon/iconOG-32.png" unless="debug" if="32bits"/>
	<icon path="art/icon/icon16.png" size='16' unless="debug || 32bits"/>
	<icon path="art/icon/icon32.png" size='32' unless="debug || 32bits"/>
	<icon path="art/icon/icon64.png" size='64' unless="debug || 32bits"/>
	<icon path="art/icon/icon128.png" size='128' unless="debug || 32bits"/>
	<icon path="art/icon/iconOG.png" unless="debug || 32bits" />
</project>
